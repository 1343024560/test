/**index.wxss**/
.contain{
    display:flex;
    width:750rpx;
    height:80rpx;
    align-items: center;
    justify-content: space-around;
}
.adress{
  width:72rpx;
  height:25rpx;
  font-size:18rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(0,0,0,1);
  line-height:25rpx;
}
.contain_input{
  width:477rpx;
  height:48rpx;
  border-radius:8rpx;
  opacity:0.39;
  border:1px solid rgba(151,151,151,1);
}
.logon{
  width:40rpx;
  height:28rpx;
  font-size:20rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(60,164,240,1);
  line-height:28rpx;
}
.body{
  display:flex;
  background:rgba(216,216,216,0.18);
}
.body-left{
  width:150rpx;
  height:875rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 4px 0px rgba(226,226,226,0.5);
}
.body-left text{
  margin:0;
  padding:0;
}
.body-left .name-first{
  width:150rpx;
  height:65rpx;
  margin-left:-30rpx;
  text-align:center;
  background:rgba(60,164,240,1);
}
.body-left>view{
  margin:auto;
  width:88rpx;
  height:840rpx;
  font-size:22rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(20,20,20,1);
  line-height:70rpx;
}
.body-right{
  margin-left:10rpx;
}
.right-cont>image{
  width:160rpx;
  height:180rpx;
}
.right-cont{
  display:flex;
  margin-bottom:10rpx;
}
.specfication{
  width:223rpx;
  height:60rpx;
  font-size:22rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:800;
  color:rgba(0,0,0,1);
  line-height:30rpx;
  margin-top:15rpx;
}
.specfication>view:first-child{
  margin-bottom:8rpx;
}
.price{
  display: flex;
  font-size:18rpx;
  margin-top:30rpx;
  height:50rpx;
}
.right-cont>view{
  margin-left:10rpx;
}
.price-vip{
  width:62rpx;
  height:22rpx;
  font-size:16rpx;
  font-weight:400;
  color:rgba(0,0,0,1);
  line-height:22rpx;
  margin-left:20rpx;
}
.vip-price{
  margin-left:20rpx;
}
.isNone{
  margin-left:50rpx;
}
.price-last text{
  width:108rpx;
  height:28rpx;
  font-size:20rpx;
  font-weight:500;
  color:rgba(60,164,240,1);
  line-height:28rpx;
}
.price-last{
  color:#000;
}
.medcine-adress{
  width:350rpx;
  height:25rpx;
  font-size:18rpx;
  font-weight:400;
  color:rgba(0,0,0,1);
  line-height:25rpx;
  display:flex;
  justify-content: space-between;
}
.medcine-adress>view{
  width:36rpx; 
  height:36rpx;
  border-radius:50%;
  background:rgba(60,164,240,1);
  border:1px solid rgba(60,164,240,1);
  margin-left:20rpx;
  font-size:30rpx;
  color:white;
  text-align: center;
  line-height:36rpx;
}